# Gateway Nginx Reverse Proxy Configuration
# External (172.16.6.77) -> Internal ALB (192.168.10.20)

server {
    listen 80;
    server_name {{ external_ip }};

    # Proxy all traffic to Internal ALB
    location / {
        proxy_pass http://{{ alb_vip }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    access_log /var/log/nginx/gateway_access.log;
    error_log /var/log/nginx/gateway_error.log;
}
